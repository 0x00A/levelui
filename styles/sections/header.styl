header
  -webkit-app-region: drag
  -webkit-user-select: none
  cursor: default
  
  color: white
  background-color: $blue

  width: 100%
  height: 80px
  display: table
  margin: 0 auto

  ul.horizontal
    padding: 0
    margin: auto
    height: inherit
    min-width: 696px
    list-style: none

    li
      display: inline

      a, a:hover
        -webkit-app-region: no-drag
        display: inline-block
        margin: 24px
        font-size: 24px
        color: white
        text-decoration: none

